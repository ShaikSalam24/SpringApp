pipeline {
    agent any
    
    stages {
        stage('Checkout Code'){
            steps{
                git branch: 'main' ,url:'https://github.com/ShaikSalam24/SpringApp'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building stage"'
            }
        }
        stage('Testing') {
            steps {
                sh 'echo "Testing stage"'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying stage"'
            }
        }
    }
    post{
        success{
            sh 'echo "Build Success"'
        }
        failure{
            sh 'echo "Build Failure"'
        }
    }
}

